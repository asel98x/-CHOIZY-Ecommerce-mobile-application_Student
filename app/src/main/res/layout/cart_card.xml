<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/Cart_OfferQut"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Chineese"
            android:textColor="#0A191E"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/Cart_OfferImg"
            app:layout_constraintTop_toBottomOf="@+id/Cart_OfferTitle" />

        <ImageView
            android:id="@+id/Cart_OfferImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/offer_shop" />

        <TextView
            android:id="@+id/Cart_OfferTitle"
            app:layout_constraintStart_toEndOf="@+id/Cart_OfferImg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Mongolian Rice"
            android:textColor="#0A191E"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Cart_OfferPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:text="Rs.5290.00"
            android:textColor="#F8774A"
            android:textSize="16dp"
            android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>